<div class="bulsup-whole-page">
  <h2 class="title">会員情報変更</h2>

  <div class="logout_field">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout_link" %>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <dl>
      <dt>
        <%= f.label :name, "名前・ニックネーム" %><span class="required">必須</span>
      </dt>
      <dd>
        <%= f.text_field :name, autofocus: true %>
      </dd>

      <dt>
        <%= f.label :email, "メールアドレス" %>
        <span class="required">必須</span>
      </dt>
      <dd>
        <%= f.email_field :email %>
      </dd>

      <dt>
        <%= f.label :password, "パスワード" %>
        <span class="required">必須</span>
      </dt>
      <dd>
        <%= f.password_field :password, placeholder: "半角英数字特殊記号8〜32文字", autocomplete: "new-password" %>
      </dd>
      <dt class="dummy">
      </dt>
      <dd>
        <%= f.password_field :password_confirmation, placeholder: "確認のためもう一度入力してください", autocomplete: "new-password" %>
      </dd>
      <dt>
      </dt>
      <dd>
          ※パスワードを変更しない場合は空白にしてください
      </dd>

      <dt>
        <%= f.label :birthdate, "生年月日" %>
      </dt>
      <dd>
        <%= f.date_select :birthdate, { use_month_numbers: true, start_year: Time.now.year, end_year: 1913, start_day: 1, end_day: 28, date_separator: " / ", prompt: { day: "--", month: "--", year: "----" } }, { class: "form-select" } %>
      </dd>

      <dt>
        <%= f.label :sex, "性別" %>
      </dt>
      <dd>
        <%= f.radio_button :sex, '男性', id: "male" %>
        <%= f.label :sex_male, '男性', for: "male" %>
        <%= f.radio_button :sex, '女性', id: "female" %>
        <%= f.label :sex_female, '女性', for: "female" %>
      </dd>

      <dt>
        <%= f.label :job, "職業" %>
      </dt>
      <dd>
        <%= f.text_field :job %>
      </dd>
    </dl>

    <div class="btn-field">
      <%= f.submit "変更する", class: "update-btn" %>
    </div>
  <% end %>
  <div class="user_delete_btn">
    <%= button_to "退会する", user_registration_path, method: :delete, class: "delete-btn", form: { onSubmit: "return confirmDelete()" } %>
  </div>
</div>
<script>
  function confirmDelete() {
    return confirm("本当に削除しますか？")
  }
</script>
