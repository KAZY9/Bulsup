<%= form_with model: @user_info, url: suggest_meal_path, method: :post, local: false do |f| %>
    <p><%= f.label :sex, "性別" %><br>
    <%= @user_info.sex %>
    </p>
    <p><%= f.label :age, "年齢" %><br> 
    <%= @user_info.age %><span>歳</span>
    </p>

    </p>
    <p><%= f.label :height, "身長" %><br> 
    <%=  @user_info.height %><span>cm</span>
    </p>

    </p>
    <p><%= f.label :weight, "体重" %><br>
    <%= @user_info.weight %><span>kg</span>
    </p>

    <p><%= f.label :activity_amount, "1日の活動レベル" %><br> 
    <%= @activity.level %>
    <%= @activity.activity %>
    </p>

    <p><%= f.label :period_of_bulking, "増量期間" %><br>
    <%= @formatted_start_date %>から<%= @formatted_end_date %>までの<%= @results[:days_differences] %>日間</p>

    <p><%= f.label :weight_to_gain, "目標増量" %><br>
    <%= @user_info.weight_to_gain %>kg 増やしたい</p>

    <p><%= f.label :basal_metabolism, "基礎代謝" %><br>
    <%= @basal_metabolism %><span>kcal</span></p>

    <p><%= f.label :calorie_consumption, "1日の消費カロリー" %><br>
    <%= @calorie_consumption %><span>kcal</span></p>

    <p><%= f.label :calorie_intake, "1日の必要摂取カロリー" %><br>
    <%= @calorie_intake %><span>kcal</span></p>

    <%= f.hidden_field :information_id, value: @user_info.id %>

    <%= f.submit "1日の必要摂取カロリーを満たす食事内容を表示する" %>
<% end %>

